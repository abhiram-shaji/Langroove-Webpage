{
  "compilerOptions": {
    "target": "ES2017",                // Use ES2017 for modern JavaScript features
    "lib": ["dom", "dom.iterable", "esnext"], // Include DOM and ESNext libraries
    "allowJs": true,                  // Allow JavaScript files in the project
    "skipLibCheck": true,             // Skip type checking of declaration files
    "strict": true,                   // Enable strict type checking options
    "noEmit": true,                   // Prevent emitting output files
    "esModuleInterop": true,          // Enable interoperability between CommonJS and ES modules
    "module": "esnext",               // Use ESNext module syntax
    "moduleResolution": "node",       // Use Node.js-style module resolution
    "resolveJsonModule": true,        // Allow importing JSON files as modules
    "isolatedModules": true,          // Ensure each file is treated as a separate module
    "jsx": "preserve",                // Preserve JSX for Next.js to handle
    "incremental": true,              // Enable incremental builds for better performance
    "paths": {
      "@/*": ["./src/*"]              // Alias `@/` to the `src/` folder
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"], // Include TypeScript files and Next.js environment
  "exclude": ["node_modules"]         // Exclude the `node_modules` folder
}
